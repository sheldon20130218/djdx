<!--pages/elementaryRank/elementaryRank.wxml-->
<mp-form-page title="初真十戒" subtitle="{{date}}">
    <mp-cells title="">  
        <mp-checkbox-group prop="checkbox" multi="{{true}}" bindchange="checkboxChange">
            <mp-checkbox wx:for="{{checkboxItems}}" wx:key="value" label="{{item.name}}" value="{{item.value}}" checked="{{item.checked}}"></mp-checkbox>
        </mp-checkbox-group>
    </mp-cells>
    <view slot="button">
      <button class="weui-btn" type="primary" disabled="{{clockined}}" bindtap="onSave">{{clockined ? '今日已打卡' : '打卡'}}</button>
    </view>
</mp-form-page>
