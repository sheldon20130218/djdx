<view data-weui-theme="{{theme}}">
  <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
    <image class="avatar" src="{{avatarUrl}}"></image>
  </button> 
  <mp-form>
    <mp-cells>
      <mp-cell title="昵称">
        <input type="nickname" class="weui-input" placeholder="请输入昵称" value="{{nickName}}" bindinput="inputEdit"/>
      </mp-cell>
    </mp-cells>
  </mp-form>
  <view>
    <button type="primary" size="default" style="margin-top: 100rpx;" bindtap="saveButtonTap">保存</button>
  </view>
  
</view>