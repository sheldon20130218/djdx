@import '../common.wxss';

page{
    background-color: #FFFFFF;
    height: 100%;
}

.weui-tabs {
    height:100%;
}

.weui-tabs-bar__wrp {
    border-bottom: 1px solid #eee;
    margin-top: 10px;
}

.weui-tabs-swiper {
    width: 100%;
    height: 100%;
}

.tab-content {
    /* height: 100px; */
    display: flex;
    align-items: center;
    padding: 40rpx;
}

.weui-tabs-bar__item {
    display: inline-block;
    width: 250rpx;
    text-align: center;
}

.weui-tabs-bar__title {
    margin: 0px 10px;
}

.tab-bar-title__selected {
    font-size: 20px;
    font-weight: bold;
}

.scroll-view-item{
    height: 50rpx;
  }